{
    "name": "Text to Speech Extension",
    "version": "1.0",
    "description": "A Chrome extension that reads text aloud",
    "manifest_version": 3,
    "permissions": ["activeTab", "scripting", "tabs","tts","notifications"],
    "background": {
        "service_worker": "background.js"
      },      
    "action": {
      "default_title": "Text to Speech Extension",
      "default_popup": "popup.html"
    }
  }
  